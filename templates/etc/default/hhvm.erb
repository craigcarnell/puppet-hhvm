MODE=daemon
RUN_AS_USER=<%= scope.lookupvar('hhvm::params::hhvm_user') %>
RUN_AS_GROUP=<%= scope.lookupvar('hhvm::params::hhvm_group') %>
SOCK=<%= @socket %>
PORT=<%= @port %>
PIDFILE=<%= @pid %>
JITREPO=<%= scope.lookupvar('hhvm::params::jit_repo') %>
CONFIG_FILE="<%= @server_ini %>"
SYSTEM_CONFIG_FILE="<%= @php_ini %>"
HDF_CONFIG_FILE="<%= @config_hdf %>"
ARGS="-c <%= @php_ini %> -c <%= @server_ini %> -c <%= @config_hdf %> -u <%= scope.lookupvar('hhvm::params::hhvm_user') %>"
